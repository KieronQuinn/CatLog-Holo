<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Catlog" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_catlog</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Catlog</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Catlog</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Catlog</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Catlog</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Catlog</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_catlog</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_catlog</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Catlog</item>
        
                <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Catlog.Widget</item>

    </style>

    <style name="ActionBar.Solid.Catlog" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_catlog</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_catlog</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_catlog</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Catlog</item>
    </style>

    <style name="ActionBar.Transparent.Catlog" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_catlog</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Catlog</item>
    </style>

    <style name="PopupMenu.Catlog" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_catlog</item>	
    </style>

    <style name="DropDownListView.Catlog" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_catlog</item>
    </style>

    <style name="ActionBarTabStyle.Catlog" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_catlog</item>
    </style>

    <style name="DropDownNav.Catlog" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_catlog</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_catlog</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_catlog</item>
    </style>
    
    <style name="ProgressBar.Catlog" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_catlog</item>
    </style>
    
    <style name="ActionButton.CloseMode.Catlog" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_catlog</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Catlog.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Catlog</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Catlog</item>
    </style>
    <style name="Theme.Catlog_main" parent="@android:style/Theme.Holo">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_catlog_main</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Catlog_main</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Catlog_main</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Catlog_main</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Catlog_main</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Catlog_main</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_catlog_main</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_catlog_main</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Catlog_main</item>
        
        
    </style>

    <style name="ActionBar.Solid.Catlog_main" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_catlog_main</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_catlog_main</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_catlog_main</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Catlog_main</item>
    </style>

    <style name="ActionBar.Transparent.Catlog_main" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_catlog_main</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Catlog_main</item>
    </style>

    <style name="PopupMenu.Catlog_main" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_catlog_main</item>	
    </style>

    <style name="DropDownListView.Catlog_main" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_catlog_main</item>
    </style>

    <style name="ActionBarTabStyle.Catlog_main" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_catlog_main</item>
    </style>

    <style name="DropDownNav.Catlog_main" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_catlog_main</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_catlog_main</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_catlog_main</item>
    </style>
    
    <style name="ProgressBar.Catlog_main" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_catlog_main</item>
    </style>
    
    <style name="ActionButton.CloseMode.Catlog_main" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_catlog_main</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Catlog_main.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Catlog_main</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Catlog_main</item>
    </style>
</resources>
